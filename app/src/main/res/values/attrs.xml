<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ButtonView">
        <attr name="buttonSize" format="dimension" />
        <attr name="insetFactor" format="integer" />

        <attr name="drawablePressed" format="reference" />
        <attr name="drawableReleased" format="reference" />
        <attr name="drawableContent" format="reference" />
    </declare-styleable>

    <declare-styleable name="GamepadView_Layout">
        <attr name="gravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
        </attr>
        <attr name="offsetX" format="dimension" />
        <attr name="offsetY" format="dimension" />
        <attr name="fixed" format="boolean" />
    </declare-styleable>
</resources>